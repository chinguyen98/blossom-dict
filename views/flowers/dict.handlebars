<div>
	<h1 class="text-center pt-4">Flower Dictionary</h1>
</div>

<div class="d-flex mt-5 flex-wrap">

	{{#each flowerList}}

	<div class="col col-md-3 flowerItem d-flex flex-column align-items-center">
		<h1 class="text-center">{{this.name}}</h1>
		<img src="/images/{{this.picture}}" alt={{this.name}}>
		<div>
			<a class="btn btn-info" href="/flowers/{{this._id}}">Show detail</a>
		</div>
	</div>

	{{/each}}

</div>